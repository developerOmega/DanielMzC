<h1> Nuevo Blog </h1>

<form action="/admin_panel/blogs" method="POST" enctype="application/x-www-form-urlencoded">
  <input type="hidden" name="_method" value="UPDATE">

  <div class="field" >
    <label for="title"> Titulo </label>
    <input type="text" id="title" name="title" placeholder="Ingresar titulo" value={{ admin.title }}>
  </div>

  <div class="field">
    <label for="description"> Descripcion </label>
    <input type="text" id="description" name="description" placeholder="Ingresar descipcion" value={{ admin.description }}>
  </div>

  <div class="field">
    <label for="content"> Content </label>
    <textarea name="content" id="content" placeholder="Ingresar contenido"> value={{ admin.content }} </textarea>
  </div>

  <button type="submit"> Guardar </button>

</form>

