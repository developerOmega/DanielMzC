<h1 class="title"> {{ blog.title }} </h1>

<div class="button-content">
  <a class="btn" href="/admin_panel/blogs/edit/{{blog.id}}"> Editar </a>
</div>

<table class="main table border-vertical tb-vertical">
  <tr>
    <th class="init"> Title </th>
    <td> <div class="td-cont"> {{ blog.title }} </div> </td>
  </tr>

  <tr>
    <th> Main Img </th>
    <td>
      <div class="td-cont">
        <form class="form-file" method="POST" enctype="multipart/form-data">
          <label class="label-img" for="main_img"> 
            <img src={{ blog.main_img }} alt="main img">
          </label>
          
          <input class="none" type="file" name="main_img" id="main_img">
          
          <div class="buttons">
            <button id="drop-file" type="button" class="btn b-red"> Eliminar </button>
          </div>
        </form> 
      </div>
    </td>
  </tr>

  <tr>
    <th> Description </th>
    <td> <div class="td-cont">{{ blog.description }}</div> </td>
  </tr>

  <tr>
    <th> Content </th>
    <td> <div class="td-cont"> {{ blog.content }} </div> </td>
  </tr>

  <tr>
    <th class="end"></th>
    <td>
      <form method="POST" action="/admin_panel/blogs/{{blog.id}}" enctype="application/x-www-form-urlencoded">
        <input type="hidden" name="_method" value="DELETE">
        <button class="btn b-red right" type="submit" > Delete </button>
      </form>
    </td>
  </tr>
</table>
