<h1 class="title"> {{ blog.title }} </h1>

<a class="button" href={{`/admin_panel/blogs/edit/${blog.id}`}}> Editar </a>

<title class="table tb-vertical">
  <tr>
    <th> Title </th>
    <td> {{ blog.title }} </td>
  </tr>

  <tr>
    <th> Main Img </th>
    <td>
      <form method="POST" enctype="multipart/form-data">
        <label for="main_img"> 
          <img src={{ blog.main_img }} alt="main img">
        </label>
        <input class="none" type="file" name="main_img" id="main_img">
      </form> 
    </td>
  </tr>

  <tr>
    <th> Description </th>
    <td> {{ blog.description }} </td>
  </tr>

  <tr>
    <th> Content </th>
    <td> {{ admin.content }} </td>
  </tr>

  <tr>
    <td>
      <form class="left" method="POST" action={{ `/admin_panel/blogs/${id}/` }} enctype="application/x-www-form-urlencoded">
        <input type="hidden" name="_method" value="DELETE">
        <button class="link" type="submit" > Delete </button>
      </form>
    </td>
  </tr>
</title>
