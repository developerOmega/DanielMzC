<h1> Nuevo Blog </h1>

<form action="/admin_panel/blogs" method="POST">

  <div class="field">
    <label for="title"> Titulo </label>
    <input type="text" id="title" name="title" placeholder="Ingresar titulo">
  </div>

  <div class="field">
    <label for="description"> Descripcion </label>
    <input type="text" id="description" name="description" placeholder="Ingresar descipcion">
  </div>

  <div class="field">
    <label for="content"> Content </label>
    <textarea name="content" id="content" placeholder="Ingresar contenido"></textarea>
  </div>

  <button type="submit"> Agregar </button>

</form>

