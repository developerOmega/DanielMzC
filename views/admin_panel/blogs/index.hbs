<h1 class="title"> Blogs </h1>

<div class="button-content">
  <a class="btn" href="/admin_panel/blogs/new"> Nuevo </a>
</div>


<table class="main table  border-horizontal tb-horizontal">
  <thead>
    <tr>
      <th> ID </th>
      <th> Title </th>
      <th> Description </th>
      <th> Main img </th>
      <th> Admin </th>
      <th> Editar </th>
      <th> Eliminar </th>
    </tr>
  </thead>
  <tbody>
      {{#blogs }}
        <tr>
          <td> {{ id }} </td>
          <td> <a href="/admin_panel/blogs/show/{{id}}"> {{ title }} </a></td>
          <td> {{ description }} </td>
          <td> <img src={{ main_img }} alt=""> </td>
          <td> </td>
          <td> <a class="link c-black" href="/admin_panel/blogs/edit/{{id}}"> Editar </a> </td>
          <td>
            <form method="POST" action="/admin_panel/blogs/{{id}}" enctype="application/x-www-form-urlencoded">
              <input type="hidden" name="_method" value="DELETE">
              <button class="btn b-red" type="submit" > Eliminar </button>
            </form>
          </td>
        </tr>
      {{/blogs}}
  </tbody>
</table>
