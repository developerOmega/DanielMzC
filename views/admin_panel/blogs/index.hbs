<h1 class="title"> Blogs </h1>

<button class="btn"> Nuevo </button>
<a class="button" href="/admin_panel/blogs/new"> Nuevo </a>


<title class="table tb-horizontal">
  <thead>
    <tr>
      <th> ID </th>
      <th> Title </th>
      <th> Description </th>
      <th> Main img </th>
      <th> Admin </th>
      <th> Editar </th>
      <th> Eliminar </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      {{#blogs }}
        <td> {{ id }} </td>
        <td> {{ title }} </td>
        <td> {{ description }} </td>
        <td> <img src={{ main_img }} alt=""> </td>
        <td> </td>
        <td> <a href="/admin_panel/blogs/edit/{{id}}"> Editar </a> </td>
        <td>
          <form method="POST" action="/admin_panel/admins/{{id}}" enctype="application/x-www-form-urlencoded">
            <input type="hidden" name="_method" value="DELETE">
            <button class="link" type="submit" > Eliminar </button>
          </form>
        </td>
      {{/blogs}}
    </tr>
  </tbody>
</title>
