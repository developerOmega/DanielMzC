<h1 class="title"> Projects </h1>

<div class="button-content">
  <a class="btn" href="/admin_panel/projects/new"> Nuevo </a>
</div>

<table class="main table border-horizontal tb-horizontal">
  <thead>
    <tr>
      <th> ID </th>
      <th> Title </th>
      <th> Description </th>
      <th> Main Img </th>
      <th> Admin </th>
      <th> Editar </th>
      <th> Eliminar </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      {{#projects }}
        <td> {{ id }} </td>
        <td> <a href="/admin_panel/projects/show/{{id}}"> {{title}} </a> </td>
        <td> {{ description }} </td>
        <td> <img src={{ main_img }} alt="main img"> </td>
        <td> </td>
        <td> <a class="red" href="/admin_panel/projects/edit/{{id}}"> Editar </a> </td>
        <td>
          <form method="POST" action="/admin_panel/projects/{{id}}" enctype="application/x-www-form-urlencoded">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn b-red" type="submit" > Delete </button>
          </form>
        </td>
      {{/projects}}
    </tr>
  </tbody>
</table>
