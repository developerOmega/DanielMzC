<h1 class="title"> Slider No.{{ slider.id }} </h1>

<div class="button-content">
  <a class="btn" href="/admin_panel/sliders/edit/{{slider.id}}"> Editar </a>
</div>

<table class="main table border-vertical tb-vertical">
  <tr>
    <th class="init"> Content </th>
    <td> <div class="td-cont"> {{ slider.content }} </div> </td>
  </tr>

  <tr>
    <th> Url </th>
    <td> <div class="td-cont"> {{ slider.url }} </div> </td>
  </tr>

  <tr>
    <th> Img </th>
    <td>
      <div class="td-cont">
        <form class="form-file" id="form-file" method="POST" enctype="multipart/form-data">

          <label id="label-img" class="label-img" for="img">
            <img id="img-tag" src={{ slider.img }} alt="img">
          </label>
          
          <input class="none" type="file" name="img" id="img">
          
          <div class="buttons" id="buttons">
            <button id="drop-file" type="button" class="btn b-red"> Eliminar </button>
          </div>
        </form> 
      </div>
    </td>
  </tr>

  <tr>
    <th class="end"></th>
    <td>
      <form method="POST" action="/admin_panel/sliders/{{slider.id}}" enctype="application/x-www-form-urlencoded">
        <input type="hidden" name="_method" value="DELETE">
        <button class="btn b-red right" type="submit" > Delete </button>
      </form>
    </td>
  </tr>
</table>
