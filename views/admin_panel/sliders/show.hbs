<h1 class="title"> Slider No.{{ slider.id }} </h1>

<a class="button" href="/admin_panel/sliders/edit/{{slider.id}}"> Editar </a>

<title class="table tb-vertical">
  <tr>
    <th> Content </th>
    <td> {{ slider.content }} </td>
  </tr>

  <tr>
    <th> Url </th>
    <td> {{ slider.url == "" ? "No hay url" : slider.url }} </td>
  </tr>

  <tr>
    <th> Img </th>
    <td>
      <form method="POST" enctype="multipart/form-data">
        <label for="img"> 
          <img src={{ slider.img }} alt="img">
        </label>
        <input class="none" type="file" name="img" id="img">
      </form> 
    </td>
  </tr>

  <tr>
    <td>
      <form class="left" method="POST" action="/admin_panel/sliders/{{id}}" enctype="application/x-www-form-urlencoded">
        <input type="hidden" name="_method" value="DELETE">
        <button class="link" type="submit" > Delete </button>
      </form>
    </td>
  </tr>
</title>
