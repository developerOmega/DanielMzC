<div class="content">

  <div class="slider">
    {{!-- {Sliders} --}}
    <div class="scontents" id="slider">
    </div>

    <div id="slider-cont">
      {{#sliders }}
        <div id="sl_{{ id }}">
          <span>{{ img }}</span>
          <span>{{ content }}</span>
          <span>{{ url }}</span>
        </div>
      {{/sliders }}
    </div>

  </div>

  <div class="section items-text">
    <h3 class="sub-title"> Hola </h3>
    <div class="item">
      Soy desarrollador web y radico en la ciudad de San Luis Potos√≠.    
    </div>
  </div>

  <div class="section radio-inside-top b-white">
    <h2 class="title c-red"> Portafolio </h2>
    
    <div class="projects">
      {{#projects  }}
        {{> project id=id title=title main_img=main_img }}
      {{/projects  }}
    </div>

  </div>

  <div class="section b-white margin-top">
    <h2 class="title c-red"> Blog </h2>

    <div class="blogs-main">
      {{> blog_main blog=blog  }}

      <div class="list">
        {{#blogs }}
          {{> blog_img id=id title=title main_img=main_img}}
        {{/blogs }}
      </div>
    </div>
    
  </div>

</div>

